<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Base -->
  <ThingDef ParentName="BuildingBase" Name="BEWH_GeneticStorage" Abstract="True">
    <thingClass>Genes40k.Building_GeneStorage</thingClass>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Beauty>0</Beauty>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>10</Mass>
    </statBases>
    <defaultPlacingRot>North</defaultPlacingRot>
    <designationCategory>Misc</designationCategory>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <maxItemsInCell>1</maxItemsInCell>
    </building>
    <drawerType>RealtimeOnly</drawerType>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>22</pathCost>
    <blockWind>false</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <neverMultiSelect>false</neverMultiSelect>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <surfaceType>None</surfaceType>
    <inspectorTabs>
      <li>ITab_Storage</li>
      <li>Genes40k.ITab_ContentsGeneStorage</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Flickable" />
    </comps>
  </ThingDef>

  <!-- Sangprimus Portum -->
  <ThingDef ParentName="BEWH_GeneticStorage">
    <defName>BEWH_SangprimusPortum</defName>
    <label>sangprimus portum</label>
    <description>The Sangprimus Portum is able to store Chapter and Primarch material. Whilst near a gestator it is able to duplicate the material within to complete the matrices of Firstborn, Primaris and Primarchs.</description>
    <graphicData>
      <texPath>Things/Building/SangprimusPortum/BEWH_SangprimusPortum</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shadowData>
        <volume>(0.9,0.2,0.9)</volume>
      </shadowData>
      <drawSize>(4, 4)</drawSize>
    </graphicData>
    <size>(3, 1)</size>
    <rotatable>true</rotatable>
    <researchPrerequisites>
      <li>BEWH_GeneseedCreation</li>
    </researchPrerequisites>
    <costList>
      <Plasteel>50</Plasteel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <building>
      <maxItemsInCell>10</maxItemsInCell>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>BEWH_PrimarchMaterial</li>
            <li>BEWH_ChapterMaterial</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>BEWH_PrimarchMaterial</li>
            <li>BEWH_ChapterMaterial</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>Core40k.PlaceWorker_OnlyOnePerMap</li>
    </placeWorkers>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
      <li Class="CompProperties_Facility">
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
    <modExtensions>
      <li Class="Genes40k.DefModExtension_SangprimusPortum" />
    </modExtensions>
  </ThingDef>

  <!-- Genetic matrix storage -->
  <ThingDef ParentName="BEWH_GeneticStorage">
    <defName>BEWH_GeneticCryostaticStorage</defName>
    <label>genetic matrix storage</label>
    <description>Able to holster 6 genetic matrices, keeping them safe and preventing deterioration.</description>
    <thingClass Inherit="False">Genes40k.Building_GeneStorageGraphicProgression</thingClass>
    <graphicData>
      <texPath>Things/Building/GeneticMatrixStorage/BEWH_MatrixStorage_Empty</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.9,0.2,0.9)</volume>
      </shadowData>
      <drawSize>(2, 2)</drawSize>
      <drawOffset>(0, 0, 0.45)</drawOffset>
    </graphicData>
    <defaultPlacingRot>North</defaultPlacingRot>
    <size>(2, 1)</size>
    <researchPrerequisites>
      <li>BEWH_GeneseedPurification</li>
    </researchPrerequisites>
    <costList>
      <Plasteel>50</Plasteel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>BEWH_GeneticMatrix</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>BEWH_GeneticMatrix</li>
          </categories>
        </filter>
      </defaultStorageSettings>
      <maxItemsInCell>3</maxItemsInCell>
    </building>
    <modExtensions>
      <li Class="Genes40k.DefModExtension_GeneStorageGraphicProgression">
        <halfFullGraphic>Things/Building/GeneticMatrixStorage/BEWH_MatrixStorage_Half</halfFullGraphic>
        <fullGraphic>Things/Building/GeneticMatrixStorage/BEWH_MatrixStorage_Full</fullGraphic>
      </li>
    </modExtensions>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
    </comps>
  </ThingDef>

  <!-- Geneseed vial storage -->
  <ThingDef ParentName="BEWH_GeneticStorage">
    <defName>BEWH_GeneseedVialStorage</defName>
    <label>geneseed vial storage</label>
    <description>Able to holster 6 geneseed vials, keeping them safe and preventing deterioration.</description>
    <thingClass Inherit="False">Genes40k.Building_GeneStorageGraphicProgression</thingClass>
    <graphicData>
      <texPath>Things/Building/GeneseedVialStorage/BEWH_GeneseedVialStorage_Empty</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.9,0.2,0.9)</volume>
      </shadowData>
      <drawSize>(2, 2.5)</drawSize>
      <drawOffset>(0, 0, 0.7)</drawOffset>
    </graphicData>
    <defaultPlacingRot>North</defaultPlacingRot>
    <size>(1, 1)</size>
    <researchPrerequisites>
      <li>BEWH_GeneseedPerfection</li>
    </researchPrerequisites>
    <costList>
      <Plasteel>50</Plasteel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>BEWH_GeneseedVial</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>BEWH_GeneseedVial</li>
          </categories>
        </filter>
      </defaultStorageSettings>
      <maxItemsInCell>6</maxItemsInCell>
    </building>
    <modExtensions>
      <li Class="Genes40k.DefModExtension_GeneStorageGraphicProgression">
        <halfFullGraphic>Things/Building/GeneseedVialStorage/BEWH_GeneseedVialStorage_Half</halfFullGraphic>
        <fullGraphic>Things/Building/GeneseedVialStorage/BEWH_GeneseedVialStorage_Full</fullGraphic>
      </li>
    </modExtensions>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
    </comps>
  </ThingDef>

  <!-- Primarch embryo container -->
  <ThingDef ParentName="BEWH_GeneticStorage">
    <defName>BEWH_PrimarchEmbryoContainer</defName>
    <label>primarch embryo container</label>
    <thingClass Inherit="False">Genes40k.Building_GeneStorageGraphicProgression</thingClass>
    <inspectorTabs Inherit="False">
      <li>ITab_Storage</li>
      <li>Genes40k.ITab_ContentsGeneStorage</li>
    </inspectorTabs>
    <surfaceType Inherit="False">Item</surfaceType>
    <description>Able to holster 1 primarc embryo, keeping it safe and preventing deterioration.</description>
    <graphicData>
      <texPath>Things/Building/PrimarchEmbryoContainer/BEWH_PrimarchEmbryoContainerEmpty</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shadowData>
        <volume>(0.9,0.2,0.9)</volume>
      </shadowData>
      <drawSize>(1, 1)</drawSize>
    </graphicData>
    <defaultPlacingRot>North</defaultPlacingRot>
    <researchPrerequisites>
      <li>BEWH_PrimarchProject</li>
    </researchPrerequisites>
    <size>(1,1)</size>
    <costList>
      <Plasteel>20</Plasteel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <building>
      <fixedStorageSettings>
        <filter>
          <thingDefs>
            <li>BEWH_PrimarchEmbryo</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Critical</priority>
        <filter>
          <thingDefs>
            <li>BEWH_PrimarchEmbryo</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <placeWorkers Inherit="False" />
    <modExtensions>
      <li Class="Genes40k.DefModExtension_GeneStorageGraphicProgression">
        <fullGraphic>Things/Building/GeneseedVialStorage/BEWH_PrimarchEmbryoContainerFull</fullGraphic>
      </li>
    </modExtensions>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>300</basePowerConsumption>
      </li>
    </comps>
  </ThingDef>

</Defs>