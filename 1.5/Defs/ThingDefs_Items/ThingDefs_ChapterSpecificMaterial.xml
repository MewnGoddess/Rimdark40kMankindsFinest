<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Base -->
    <ThingDef Name="BEWH_ChapterGeneticMaterial" Abstract="True">
        <thingClass>ThingWithComps</thingClass>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <MarketValue>4000</MarketValue>
            <Mass>0.5</Mass>
            <Flammability>0</Flammability>
        </statBases>
        <thingCategories>
            <li>BEWH_ChapterMaterial</li>
        </thingCategories>
        <tradeTags>
            <li>BEWH_ChapterMaterial</li>
        </tradeTags>
        <graphicData>
            <drawSize>(1.5, 1.5)</drawSize>
        </graphicData>
        <stackLimit>1</stackLimit>
        <category>Item</category>
        <drawerType>MapMeshOnly</drawerType>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <selectable>true</selectable>
        <altitudeLayer>Item</altitudeLayer>
        <alwaysHaulable>true</alwaysHaulable>
        <drawGUIOverlay>true</drawGUIOverlay>
        <rotatable>false</rotatable>
        <pathCost>14</pathCost>
        <thingSetMakerTags>
            <li>RewardStandardHighFreq</li>
        </thingSetMakerTags>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
    </ThingDef>

    <!-- I : Dark Angels -->
    <ThingDef ParentName="BEWH_ChapterGeneticMaterial">
        <defName>BEWH_ChapterMaterialI</defName>
        <label>chapter material I - Dark Angels</label>
        <description>This containers holds the genetic mutation material of Chapter I - Dark Angels</description>
        <graphicData>
            <texPath>Things/Item/ChapterMaterial/ChapterMaterial_I</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <modExtensions>
            <li Class="Genes40k.DefModExtension_ChapterMaterial" />
            <li Class="Genes40k.DefModExtension_GeneFromMaterial">
                <addedGene>BEWH_ChapterIDarkAngels</addedGene>
