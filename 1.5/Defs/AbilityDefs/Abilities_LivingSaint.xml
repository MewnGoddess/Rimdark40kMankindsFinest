<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!--=== Living Saint ====-->
  <!-- Divine Flight -->
  <AbilityDef>
    <defName>BEWH_DivineFlight</defName>
    <label>divine flight</label>
    <description>This pawn is granted flight by their wings.</description>
    <iconPath>UI/Abilities/BEWH_DivineFlight</iconPath>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <cooldownTicksRange>0</cooldownTicksRange>
    <verbProperties>
      <verbClass>Verb_CastAbilityJump</verbClass>
      <label>divine flight</label>
      <violent>false</violent>
      <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
      <warmupTime>0.5</warmupTime>
      <range>100</range>
      <requireLineOfSight>true</requireLineOfSight>
      <soundCast>Longjump_Jump</soundCast>
      <soundLanding>Longjump_Land</soundLanding>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>false</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="Genes40k.CompProperties_AbilityDivineRadianceCost">
        <divineRadianceCost>0.02</divineRadianceCost>
      </li>
    </comps>
  </AbilityDef>

  <!-- Holy Blast -->
  <AbilityDef>
    <defName>BEWH_LivingSaintHolyBlast</defName>
    <label>holy blast</label>
    <description>The living saint focuses on a spot, causing an explosion of warp energy to emerge, damaging enemies but healing allies.</description>
    <iconPath>UI/Abilities/BEWH_HolyBlast</iconPath>
    <displayGizmoWhileUndrafted>False</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <cooldownTicksRange>1250</cooldownTicksRange>
    <hostile>False</hostile>
    <statBases>
      <Ability_EffectRadius>11.9</Ability_EffectRadius>
    </statBases>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>30</range>
      <warmupTime>0.5</warmupTime>
      <!--<soundCast>AcidSpray_Resolve</soundCast>-->
      <targetParams>
        <canTargetHumans>True</canTargetHumans>
        <canTargetMechs>False</canTargetMechs>
        <canTargetAnimals>False</canTargetAnimals>
        <canTargetLocations>True</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="Genes40k.CompProperties_AbilityDivineRadianceCost">
        <divineRadianceCost>0.20</divineRadianceCost>
      </li>
      <li Class="Genes40k.CompProperties_AbilityAoeHit">
        <damageDef>BEWH_LivingSaintHoly</damageDef>
        <damageAmount>5</damageAmount>
        <scaleStat>PsychicSensitivity</scaleStat>
        <scaleFactor>0.6</scaleFactor>
      </li>
    </comps>
  </AbilityDef>

  <!-- Proof of Faith -->
  <AbilityDef>
    <defName>BEWH_LivingSaintProofOfFaith</defName>
    <label>Proof of Faith</label>
    <description>The living saint uses the devotion of a pawn as a conduit to tap into the warp, fueling their power. This however leaves the pawn in coma, due to the nature of channeling warp energy through them.</description>
    <iconPath>UI/Abilities/BEWH_ProofOfFaith</iconPath>
    <displayGizmoWhileUndrafted>False</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <cooldownTicksRange>1250</cooldownTicksRange>
    <hostile>False</hostile>
    <jobDef>CastAbilityOnThingMelee</jobDef>
    <statBases>
      <Ability_Duration>1000</Ability_Duration>
    </statBases>
    <verbProperties>
      <verbClass>Verb_CastAbilityTouch</verbClass>
      <range>-1</range>
      <warmupTime>1</warmupTime>
      <!--<soundCast>AcidSpray_Resolve</soundCast>-->
      <targetParams>
        <canTargetHumans>True</canTargetHumans>
        <canTargetLocations>false</canTargetLocations>
        <canTargetBuildings>false</canTargetBuildings>
        <canTargetMechs>false</canTargetMechs>
        <canTargetMutants>false</canTargetMutants>
        <canTargetAnimals>false</canTargetAnimals>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="Genes40k.CompProperties_AbilityProofOfFaith">
        <divineRadianceGain>0.15</divineRadianceGain>
        <durationMultiplier>PsychicSensitivity</durationMultiplier>
      </li>
      <li Class="CompProperties_AbilityGiveHediff">
        <compClass>CompAbilityEffect_GiveHediff</compClass>
        <hediffDef>BEWH_ProofOfFaithComa</hediffDef>
        <durationMultiplier>PsychicSensitivity</durationMultiplier>
        <replaceExisting>true</replaceExisting>
      </li>
    </comps>
  </AbilityDef>

  <!-- Inviolable Aura -->
  <AbilityDef>
    <defName>BEWH_LivingSaintInviolableAura</defName>
    <label>Inviolable Aura</label>
    <description>The living saint extends an aura of protection to nearby allies, shielding them from attacks. The effect remains attached to the caster for 6 hours.</description>
    <iconPath>UI/Abilities/BEWH_AbilityLivingSaintAura</iconPath>
    <jobDef>CastAbilityOnThing</jobDef>
    <targetRequired>False</targetRequired>
    <canUseAoeToGetTargets>False</canUseAoeToGetTargets>
    <stunTargetWhileCasting>True</stunTargetWhileCasting>
    <showPsycastEffects>False</showPsycastEffects>
    <sendMessageOnCooldownComplete>true</sendMessageOnCooldownComplete>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <statBases>
      <Ability_Duration>250</Ability_Duration>
      <Ability_EffectRadius>11.9</Ability_EffectRadius>
    </statBases>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <warmupTime>0.5</warmupTime>
      <range>11.9</range>
      <drawAimPie>False</drawAimPie>
      <requireLineOfSight>False</requireLineOfSight>
      <targetParams>
        <canTargetSelf>true</canTargetSelf>
        <canTargetPawns>false</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
        <canTargetAnimals>false</canTargetAnimals>
        <canTargetHumans>false</canTargetHumans>
        <canTargetMechs>false</canTargetMechs>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="Genes40k.CompProperties_AbilityDivineRadianceCost">
        <divineRadianceCost>1</divineRadianceCost>
      </li>
      <li Class="CompProperties_AbilityGiveHediff">
        <compClass>CompAbilityEffect_GiveHediff</compClass>
        <hediffDef>BEWH_LivingSaintInviolableAuraSelf</hediffDef>
        <onlyBrain>True</onlyBrain>
        <onlyApplyToSelf>True</onlyApplyToSelf>
        <replaceExisting>true</replaceExisting>
      </li>
    </comps>
  </AbilityDef>

</Defs>