<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- Gene-seed Vial Related -->
	<!-- Firstborn Phase Base -->
	<HediffDef Name="BEWH_FirstbornPhaseHediffBase" Abstract="True">
		<hediffClass>HediffWithComps</hediffClass>
		<description>Undergoing a grueling process to become a firstborn.</description>
		<everCurableByItem>false</everCurableByItem>
		<initialSeverity>0.01</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<label>In progress</label>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>Completed</label>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	<!-- Firstborn Phase 1 -->
	<HediffDef ParentName="BEWH_FirstbornPhaseHediffBase">
		<defName>BEWH_FirstbornPhaseOne</defName>
		<label>firstborn development phase 1</label>
		<comps>
			<li Class="Core40k.HediffCompProperties_SendLetterAtSeverity">
				<letter>Firstborn Phase Completed</letter>
				<message>First phase of the firstborn development has been completed and can now be advanced to the second phase</message>
				<letterDef>PositiveEvent</letterDef>
			</li>
		</comps>
	</HediffDef>
	<!-- Firstborn Phase 2 -->
	<HediffDef ParentName="BEWH_FirstbornPhaseHediffBase">
