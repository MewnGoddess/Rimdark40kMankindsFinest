<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- Jaghatai Khan: Alakh Geh -->
	<HediffDef>
		<defName>BEWH_AlakhGeh</defName>
		<label>Alakh Geh</label>
		<hediffClass>HediffWithComps</hediffClass>
		<description>Thought will and intention alone, the Khan is able to move unimpeded and swiftly.</description>
		<everCurableByItem>false</everCurableByItem>
		<isBad>false</isBad>
		<stages>
			<li>
				<statFactors>
					<MoveSpeed>2</MoveSpeed>
					<MeleeCooldownFactor>0.5</MeleeCooldownFactor>
					<MeleeDodgeChance>2</MeleeDodgeChance>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
			</li>
		</comps>
	</HediffDef>

	<!-- Leman Russ - Denied Witch-->
	<HediffDef>
		<defName>BEWH_DeniedWitch</defName>
		<label>Denied Witch</label>
		<description>This pawn has had their psychic and mental capabilities dampened. They can no longer cast psycasts.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<initialSeverity>1.0 </initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<statFactors>
					<PsychicSensitivity>0.1</PsychicSensitivity>
					<PsychicEntropyRecoveryRate>0.1</PsychicEntropyRecoveryRate>
				</statFactors>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.85</setMax>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-2</severityPerDay>
			</li>
		</comps>
	</HediffDef>

	<!-- Necrodermite Arm -->
	<HediffDef>
		<defName>BEWH_NecrodermiteArm</defName>
		<label>necrodermite arm</label>
		<description>???</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<everCurableByItem>false</everCurableByItem>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<defaultLabelColor>(0.5, 0.05, 0.05)</defaultLabelColor>
		<stages>
			<li>
				<statFactors>
					<Flammability>0</Flammability>
					<ArmorRating_Heat>0.2</ArmorRating_Heat>
					<MeleeDamageFactor>1.2</MeleeDamageFactor>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>necrodermite hand</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>25</power>
						<cooldownTime>1</cooldownTime>
					</li>
				</tools>
			</li>
		</comps>
	</HediffDef>

	<!-- Angron Berserk -->
	<HediffDef>
		<defName>BEWH_AngronBerserk</defName>
		<label>berserk</label>
		<hediffClass>HediffWithComps</hediffClass>
		<description>RAAAAGGGEEEEE INCAAAARNATEEEEE</description>
		<everCurableByItem>false</everCurableByItem>
		<isBad>false</isBad>
		<stages>
			<li>
				<statFactors>
					<MeleeHitChance>1.5</MeleeHitChance>
					<MeleeDamageFactor>2</MeleeDamageFactor>
					<MeleeDodgeChance>0.75</MeleeDodgeChance>
					<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
					<ArmorRating_Heat>0.5</ArmorRating_Heat>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
			</li>
			<li Class="Core40k.HediffCompProperties_RemoveMentalStateOnHediffEnd">
				<specificMentalState>Berserk</specificMentalState>
			</li>
		</comps>
	</HediffDef>

	<HediffDef>
		<defName>BEWH_Concealed</defName>
		<label>concealed</label>
		<description>Concealed and undetectable to almost everything.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<everCurableByItem>false</everCurableByItem>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Invisibility">
				<visibleToPlayer>true</visibleToPlayer>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath" />
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
			</li>
		</comps>
	</HediffDef>

</Defs>