<Defs>

    <!-- ===== IMPERIUM ===== -->
    <!-- Power Armor Imperium -->
    <ThingDef ParentName="BEWH_PowerArmorBase">
        <defName>BEWH_ImperiumPowerArmor</defName>
        <label>Imperium Power Armor</label>
        <description>Power armor of Imperium Space Marines.</description>
        <thingClass>Genes40k.PowerArmorApparelColourTwo</thingClass>
        <recipeMaker>
            <researchPrerequisite>BEWH_AstartesPowerArmor</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Armor/Imperium/PowerArmor/BEWH_ImperiumPowerArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Armor/Imperium/PowerArmor/BEWH_ImperiumPowerArmor</wornGraphicPath>
            <tags>
                <li>ImperiumPowerArmor</li>
            </tags>
        </apparel>
    </ThingDef>

