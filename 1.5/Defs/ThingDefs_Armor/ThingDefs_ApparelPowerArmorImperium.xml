<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- ===== IMPERIUM ===== -->
    <!-- Power Armor Imperium -->
    <ThingDef ParentName="BEWH_PowerArmorBase">
        <defName>BEWH_ImperiumPowerArmor</defName>
        <label>Imperium Power Armor</label>
        <description>Power armor of Imperium Space Marines.</description>
        <thingClass>Genes40k.ChapterApparelColourTwo</thingClass>
        <recipeMaker>
            <researchPrerequisite>BEWH_AstartesPowerArmor</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Armor/Imperium/PowerArmor/BEWH_ImperiumPowerArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Armor/Imperium/PowerArmor/BEWH_ImperiumPowerArmor</wornGraphicPath>
            <tags>
                <li>ImperiumPowerArmor</li>
            </tags>
            <renderNodeProperties>
                <li>
                    <workerClass>PawnRenderNodeWorker_Apparel_Body</workerClass>
                    <nodeClass>PawnRenderNode_Apparel</nodeClass>
                    <texPath>Things/Armor/Imperium/PowerArmor/BEWH_ImperiumPowerArmor</texPath>
                    <drawSize>1</drawSize>
                    <parentTagDef>Body</parentTagDef>
                    <drawData>
                        <defaultData>
                            <layer>60</layer>
                        </defaultData>
                        <dataNorth>
                            <layer>70</layer>
                        </dataNorth>
                        <scaleOffsetByBodySize>true</scaleOffsetByBodySize>
                    </drawData>
                </li>
                <li>
                    <workerClass>Genes40k.PawnRenderNodeWorker_AttachmentShoulderPad</workerClass>
                    <texPath>Things/Armor/Imperium/PowerArmor/Shoulder/BEWH_ImperiumPowerArmor_Shoulder</texPath>
                    <drawSize>1</drawSize>
                    <parentTagDef>ApparelBody</parentTagDef>
                    <drawData>
                        <defaultData>
                            <layer>-1</layer>
                        </defaultData>
                        <scaleOffsetByBodySize>true</scaleOffsetByBodySize>
                        <dataEast>
                            <layer>80</layer>
                        </dataEast>
                        <dataWest>
                            <layer>80</layer>
                        </dataWest>
                    </drawData>
                </li>
            </renderNodeProperties>
        </apparel>
    </ThingDef>

    <!-- Power Armor Helmet Imperium -->
    <ThingDef ParentName="BEWH_PowerArmorHelmetBase">
        <defName>BEWH_ImperiumPowerArmorHelmet</defName>
        <label>Imperium Power Helmet</label>
        <description>Standard issue helmet of Imperium Space Marines.</description>
        <thingClass>Genes40k.ChapterApparelColourTwo</thingClass>
        <recipeMaker>
            <researchPrerequisite>BEWH_AstartesPowerArmor</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Headgear/Imperium/PowerArmor/BEWH_ImperiumHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Headgear/Imperium/PowerArmor/BEWH_ImperiumHelmet</wornGraphicPath>
            <tags>
                <li>ImperiumPowerArmorHelmet</li>
            </tags>
        </apparel>
    </ThingDef>

    <!-- Power Armor Primaris Helmet Imperium -->
    <ThingDef ParentName="BEWH_PowerArmorHelmetBase">
        <defName>BEWH_ImperiumPrimarisPowerArmorHelmet</defName>
        <label>Imperium Primaris Power Helmet</label>
        <description>Standard issue helmet of Imperium Primaris Space Marines.</description>
        <thingClass>Genes40k.ChapterApparelColourTwo</thingClass>
        <recipeMaker>
            <researchPrerequisite>BEWH_AstartesPowerArmor</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Headgear/Imperium/PowerArmorPrimaris/BEWH_ImperiumHelmetAlt</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Headgear/Imperium/PowerArmorPrimaris/BEWH_ImperiumHelmetAlt</wornGraphicPath>
            <tags>
                <li>ImperiumPowerArmorHelmet</li>
            </tags>
        </apparel>
    </ThingDef>


</Defs>