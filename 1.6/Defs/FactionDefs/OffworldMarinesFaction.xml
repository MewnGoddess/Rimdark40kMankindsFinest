<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <FactionDef ParentName="FactionBase">
        <defName>BEWH_OffworldMarinesFaction</defName>
        <label>Offworld Marines</label>
        <description>A company of Space Marines stationed aboard an off-world ship.</description>

        <fixedLeaderKinds>
            <li>BEWH_LordCommanderPawn</li>
        </fixedLeaderKinds>

        <pawnSingular>Marine</pawnSingular>
        <pawnsPlural>Marines</pawnsPlural>
        <fixedName>Offworld Marines</fixedName>

        <backstoryFilters>
            <li>
                <categories>
                    <li>Offworld</li>
                </categories>
            </li>
        </backstoryFilters>

        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
        <configurationListOrderPriority>3000</configurationListOrderPriority>
        <displayInFactionSelection>false</displayInFactionSelection>

        <canSiege>false</canSiege>
        <canStageAttacks>false</canStageAttacks>
        <techLevel>Ultra</techLevel>
        <rescueesCanJoin>false</rescueesCanJoin>
        <autoFlee>false</autoFlee>

        <hiddenIdeo>true</hiddenIdeo>

        <canRequestTraders>false</canRequestTraders>
        <canRequestMilitaryAid>false</canRequestMilitaryAid>
        <canGenerateQuestSites>false</canGenerateQuestSites>
        <raidsForbidden>true</raidsForbidden>

        <xenotypeSet Inherit="False">
            <xenotypeChances>
                <BEWH_SpaceMarine>1</BEWH_SpaceMarine>
            </xenotypeChances>
        </xenotypeSet>

        <factionIconPath>UI/Xenotypes/BEWH_SpaceMarineXenoIcon</factionIconPath>
        <settlementTexturePath>UI/Xenotypes/BEWH_SpaceMarineXenoIcon</settlementTexturePath>
        <modExtensions>
            <li Class="Core40k.DefModExtension_InitialGoodwill">
                <initialGoodwill>30</initialGoodwill>
                <applyToPlayer>true</applyToPlayer>
                <onlyApplyToPlayer>true</onlyApplyToPlayer>
            </li>
        </modExtensions>
    </FactionDef>

</Defs>