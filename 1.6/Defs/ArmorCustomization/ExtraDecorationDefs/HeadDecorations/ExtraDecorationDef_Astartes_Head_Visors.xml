        <defaultColourTwo>(203,39,39)</defaultColourTwo>
        <defaultColourThree>(31,128,31)</defaultColourThree>
        <hasArmorColourPaletteOption>true</hasArmorColourPaletteOption>
    </Core40k.ExtraDecorationDef>

