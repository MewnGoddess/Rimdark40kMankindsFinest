            <li>North</li>
            <li>South</li>
            <li>East</li>
        </defaultShowRotation>
        <appliesTo>
            <li>BEWH_MkVIIPowerArmorHelmet</li>
            <li>BEWH_MkXPowerArmorHelmet</li>
        </appliesTo>
        <drawData>
            <dataNorth>
                <layer>76.5</layer>
            </dataNorth>
            <dataSouth>
                <layer>81</layer>
            </dataSouth>
            <dataEast>
                <layer>71.5</layer>
            </dataEast>
            <dataWest>
                <layer>71.5</layer>
                <flip>true</flip>
            </dataWest>
        </drawData>
        <colourable>true</colourable>
        <useMask>true</useMask>
        <flipable>true</flipable>
        <colorAmount>3</colorAmount>
        <useArmorColourAsDefault>true</useArmorColourAsDefault>
