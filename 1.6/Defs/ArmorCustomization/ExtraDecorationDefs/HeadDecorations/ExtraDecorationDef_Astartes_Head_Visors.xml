    <Core40k.ExtraDecorationDef>
        <defName>BEWH_Deco_Visor_1</defName>
        <label>Visor</label>
        <description>...</description>
        <iconPath>UI/Decoration/Icons/Astartes/Headgear/BEWH_Deco_ApothecaryVisor_icon</iconPath>
