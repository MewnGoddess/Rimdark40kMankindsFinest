<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Sigma Pariah -->
    <ThoughtDef>
        <defName>BEWH_SigmaPariah</defName>
        <workerClass>ThoughtWorker_AlwaysActive</workerClass>
        <stackLimit>1</stackLimit>
        <requiredGenes>
            <li>BEWH_SigmaPariah</li>
        </requiredGenes>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>Sigma Pariah</label>
                <description>The silence... it's all I know. Others recoil from me, their fear and hatred as loud as a battle cry. I am a void in the warp, a shadow in their light. They call me cursed, but I see it as strength - a shield against the corruption that taints them. If my existence is a weapon, so be it. I will endure their scorn to serve humanity.</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <!-- Sigma Pariah Social -->
    <ThoughtDef>
        <defName>BEWH_SigmaPariahSocial</defName>
        <thoughtClass>Thought_SituationalSocial</thoughtClass>
        <workerClass>Genes40k.ThoughtWorker_Pariah</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>Pariah</label>
                <baseOpinionOffset>-6</baseOpinionOffset>
            </li>
        </stages>
        <modExtensions>
            <li Class="Genes40k.DefModExtension_Pariah">
                <pariahGene>BEWH_SigmaPariah</pariahGene>
            </li>
        </modExtensions>
    </ThoughtDef>


