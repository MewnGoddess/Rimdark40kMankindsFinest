    <!-- ===== IMPERIUM ===== -->
    <!-- MK 7 -->
    <ThingDef ParentName="BEWH_PowerArmorHelmetBase">
        <defName>BEWH_MkVIIPowerArmorHelmet</defName>
        <label>Mk VII Power Armor Helmet</label>
        <description>A standard-issue battle helm of the Adeptus Astartes, offering durable ceramite protection and a reinforced grille design. It provides reliable performance and is well-suited for prolonged combat operations.</description>
        <thingClass>Genes40k.ChapterHeadDecorativeApparelColourTwo</thingClass>
        <recipeMaker>
            <researchPrerequisite>BEWH_PowerArmorMkVII</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Headgear/Imperium/PowerArmor/BEWH_MkVIIHelmet</texPath>
        </graphicData>
        <statBases>
            <WorkToMake>26250</WorkToMake>
            <MarketValue>2500</MarketValue>

            <ArmorRating_Sharp>1.1</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
            <ArmorRating_Heat>1</ArmorRating_Heat>

            <Insulation_Cold>6</Insulation_Cold>
            <Insulation_Heat>4</Insulation_Heat>

        </statBases>
        <equippedStatOffsets>
            <TerrorSource MayRequire="Ludeon.RimWorld.Ideology">8</TerrorSource>
            <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.67</VacuumResistance>
        </equippedStatOffsets>
        <costList>
            <ComponentSpacer>1</ComponentSpacer>
            <Plasteel>50</Plasteel>
        </costList>
        <apparel>
            <wornGraphicPath>Things/Headgear/Imperium/PowerArmor/BEWH_MkVIIHelmet</wornGraphicPath>
            <tags>
                <li>BEWH_PowerArmorHelmetMkVII</li>
            </tags>
        </apparel>
        <modExtensions>
            <li Class="Core40k.DefModExtension_EnableTabDef">
                <tabDefs>
                    <li>BEWH_ExtraDecoration</li>
                </tabDefs>
            </li>
        </modExtensions>
    </ThingDef>

